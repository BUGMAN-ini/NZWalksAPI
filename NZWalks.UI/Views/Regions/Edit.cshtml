@model NZWalks.UI.Models.RegionDTO

@{
}

<h1 class="mt-3">Edit Region</h1>


@if(Model is not null)
{
    <form method="post">
    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Id" readonly></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>
    </div>

    <div class="mt-3">
        <label class="form-label">ImageUrl</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl"></input>
    </div>

    <div class="mt-3">
        <button type="submit" asp-controller="Regions" asp-action="Delete" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
    </form>
}